{
  "exclude": ["node_modules", "dist", "tests/**/*.test.ts"],
  "include": ["src/**/*.ts", "../shared/**/*.ts"],
  "compilerOptions": {
    "types": ["node"],
    "target": "ESNext",
    "module": "commonjs",
    "outDir": "../dist",
    "rootDirs": ["./src", "../shared"],
    "baseUrl": "./",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true
  }
}
